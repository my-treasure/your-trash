<div class="mt-5 mb-5">
  <%= simple_form_for(@offer) do |f| %>
    <%#= f.error_notification %>
    <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class = "container" class="form-inputs">
      <%= f.input :title %>
      <%= f.input :body %>
      <%= f.input :address %>
      <%= f.input :pickupslots %>
      <%= f.input :typeofoffer %>
      <%= f.input :foodtype %>
      <%= f.input :allergengluten %>
      <%= f.input :allergennuts %>
      <%= f.input :allergenfish %>
      <%= f.input :allergenother %>
      <%= f.input :post_image, as: :file %>


      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
