<div class="offer-card">
  <div class="right-content">
    <div class="padding-wrapper">
      <p><%= booking.offer.typeofoffer ?  booking.offer.typeofoffer : "Vegan" %></p>
        <h6><%= booking.offer.title[0...20] %></h6>
        <p><%= booking.offer.address[0...20] %></p>
        <p><i class="fa-regular fa-clock"></i> <%= booking.offer.pickupslots %></p>

    <div class="placeholder-offer-card">
      <%= link_to booking_path(booking.id), data: {turbo_method: :delete} do %>
        <i class="fa-regular fa-trash-can"></i>
        <% end %>
      <%= link_to chatroom_path(Chatroom.find_by(booking_id: booking.id)) do %>
        <i class="fa-regular fa-message"></i>
        <% end %>
      <%= link_to new_booking_review_path(booking) do %>
        <i class="fa-regular fa-star"></i>
      <% end %>
    </div>


    </div>
  </div>

   <div class="left-image">
    <% if booking.offer.images.attached? %>
      <% booking.offer.images.each do |photo| %>
      <%= cl_image_tag photo.key,
        :gravity => "center",
        :class => "dashboard-img", crop: :fill %>
    <% end %>
    <% else %>
      <h5>PlaceHolder</h5>
    <% end %>
   </div>


</div>
