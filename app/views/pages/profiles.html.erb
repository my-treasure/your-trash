
<div class="first-profile-half mt-4">
    <%= cl_image_tag @user.profile_picture.key, class: "avatar-profile mt-3" %>

    <h3 class="mt-3">@<%= @user.username.capitalize %></h3>

  <% if Follow.find_by(followed_id:current_user.id)  %>
      <i class="fa-solid fa-check mt-3"></i>
  <% else %>
    <%= link_to profile_path(@user), data: {turbo_method: :post} do %>
      <i class="fa-regular fa-square-plus mt-3"></i>
    <% end %>
  <% end %>
</div>
<div class="review-title">
 <%= simple_form_for( Review.new, data: {controller: "submit"} )do |f| %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating", action: "click->fsubmit#call"}}%>
    <%= f.submit "", class: "d-none" %>
<% end %>
</div>

<h1 class="mt-4" style="margin-left: 25px">Recent Posts</h1>

<div class="profiles-grid mt-3">

  <% @user.offers.each do  |offer| %>
    <%= link_to offer_path(offer.id) do %>
        <div class="post-card">
          <h6><%= truncate(offer.title, length: 10) %></h6>
          <%= cl_image_tag offer.images.first.key %>
        </div>
    <% end %>
  <% end %>
</div>
